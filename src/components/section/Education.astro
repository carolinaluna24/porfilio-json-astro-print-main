---
import Section from "@/components/Section.astro"
import { education } from "@/cv.json";
---

<Section title="Education">
  <ul>
    {
      education.map(
        ({ institution, area, studyType, startDate, endDate, url, courses }) => {
          const starYear = new Date(startDate).getFullYear();
          const endYear =
            endDate !== null ? new Date(endDate).getFullYear() : "Actual";
          const years = ` ${starYear} - ${endYear}`;

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3><a href={url} target="_blank" rel="noopener noreferrer">{institution}</a></h3>
                    <h4>{area} - {studyType}</h4>
                  </div>
                  <time datetime="">{years}</time>
                </header>
                {courses.length > 0 && (
                  <section>
                    <h5>Courses:</h5>
                    <ul>
                      {courses.map(course => (
                        <li>{course}</li>
                      ))}
                    </ul>
                  </section>
                )}
              </article>
            </li>
          );
        },
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time{
    color: #555;
    font-size: 0.85rem;
  }
</style>
